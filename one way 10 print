var x = 0;
var y = 0; 
var spacing = 30;
var r = random(0,2);
strokeWeight(3);

draw = function() {
    stroke(0,0,0);
   if (r < 1) {
        line (x, y, x+spacing, y+spacing);
    }
    else{
        line (x, y+spacing, x+spacing, y);
    }
    r = random(0,2);
    x = x + spacing;
    if (x > width){
        x = 0;
        y = y + spacing;
    }
        
};
